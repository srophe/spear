                  <person>
                    <persName ref="http://syriaca.org/person/608"/>
                    <birth notBefore="0239-10" notAfter="0240-09">
                      <choice>
                        <reg><date notBefore="0239-10" notAfter="0240-09" calendar="Gregorian">A.D. 239/40</date></reg>
                        <orig><date when-custom="0551" calendar="Seleucid">A. Gr. 551</date></orig>
                      </choice>
                      <note type="desc"><persName ref="http://syriaca.org/person/608">Mani</persName> was born in 239.</note>
