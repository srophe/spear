                  <ptr target="urn:cts:syriacLit:nhsl8559.syriacCorpus57:3"/>
                </bibl>
                <bibl type="primary">
                  <ptr target="http://syriaca.org/cbss/IRKW44YC"/>
                  <citedRange unit="part">2</citedRange>
