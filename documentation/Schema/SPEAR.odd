                    <desc> In 
                      <choice>
                        <corr><date when="-0044" calendar="Gregorian">44 B.C.</date></corr>
                        <sic>
                          <reg><date notBefore="-0046-10" notAfter="-0045-09" calendar="Gregorian">46/5 B.C.</date></reg>
                          <orig><date when-custom="0266" datingMethod="Seleucid">A. Gr.
                            266</date></orig>
                        </sic>
                      </choice>
                      <persName ref="http://syriaca.org/person/2238">Augustus</persName> became King of 
                      <placeName ref="http://syriaca.org/place/166"> Rome </placeName>. 
                    </desc>
                  </event>
                </listEvent>
                <bibl type="primary">
                  <ptr target="http://syriaca.org/cbss/XQU5AW69"/>
                  <citedRange unit="p">3</citedRange>
